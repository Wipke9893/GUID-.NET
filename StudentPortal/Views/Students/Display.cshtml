@{
}


@model StudentPortalWeb.Models.DisplayStudentViewModel

<h1>Display Student</h1>

@if (Model == null)
{
    <p>Student not found.</p>
}
else
{
    <div>
        <h2>@Model.Name</h2>
        <div><strong>Email:</strong> @Model.Email</div>
        <div><strong>Phone:</strong> @Model.Phone</div>
        <div><strong>Subscribed:</strong> @Model.Subscribed</div>
    </div>
}
